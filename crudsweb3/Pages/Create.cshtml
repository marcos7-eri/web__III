@page
@model crudsweb3.Pages.CreateModel

@{
    ViewData["Title"] = "Crear tarea";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3 mb-1">🆕 Crear tarea</h1>
            <p class="text-muted mb-0">Agrega una nueva tarea para organizar tu trabajo</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-page="./Index" class="btn btn-outline-secondary shadow-sm">
                <i class="fas fa-arrow-left me-2"></i>Volver a la lista
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Tarea.nombreTarea" class="form-label"></label>
                    <input asp-for="Tarea.nombreTarea" class="form-control" placeholder="Ej: Comprar insumos" />
                    <span asp-validation-for="Tarea.nombreTarea" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Tarea.fechaVencimiento" class="form-label"></label>
                    <input asp-for="Tarea.fechaVencimiento" type="datetime-local" class="form-control" />
                    <span asp-validation-for="Tarea.fechaVencimiento" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Tarea.estado" class="form-label"></label>
                    <input asp-for="Tarea.estado" class="form-control" placeholder="Ej: Pendiente / Activo / Inactivo / En curso / Completo" />
                    <span asp-validation-for="Tarea.estado" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Tarea.IdUsuario" class="form-label"></label>
                    <input asp-for="Tarea.IdUsuario" type="number" min="1" step="1" class="form-control" />
                    <span asp-validation-for="Tarea.IdUsuario" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary shadow-sm">
                        <i class="fas fa-plus me-1"></i>Crear
                    </button>
                    <a asp-page="./Index" class="btn btn-outline-secondary shadow-sm">
                        <i class="fas fa-arrow-left me-1"></i>Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card {
        border-radius: 0.75rem;
    }

    .btn {
        min-width: 120px;
    }

    .form-label {
        font-weight: 600;
        color: #2c3e50;
    }
</style>

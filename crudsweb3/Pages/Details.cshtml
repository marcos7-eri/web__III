@page
@model crudsweb3.Pages.DetailsModel
@{
    ViewData["Title"] = "Detalles de la tarea";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3 mb-1">📌 Detalles de la tarea</h1>
            <p class="text-muted mb-0">Información completa de la tarea seleccionada</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-page="./Index" class="btn btn-outline-secondary shadow-sm">
                <i class="fas fa-arrow-left me-2"></i>Volver a la lista
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.Tarea.nombreTarea)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Tarea.nombreTarea)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.Tarea.fechaVencimiento)</dt>
                <dd class="col-sm-9">
                    @{
                        string fechaDisplay = Model.Tarea.fechaVencimiento == null
                        ? "Sin fecha límite"
                        : string.Format("{0:dd/MM/yyyy HH:mm}", Model.Tarea.fechaVencimiento);
                    }
                    @fechaDisplay
                </dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.Tarea.estado)</dt>
                <dd class="col-sm-9">
                    @{
                        var est = (Model.Tarea.estado ?? string.Empty).Trim();
                        var e = est.ToUpperInvariant();
                        var badge = "bg-secondary";
                        if (e == "PENDIENTE") badge = "bg-warning";
                        else if (e == "COMPLETO" || e == "COMPLETA" || e == "ACTIVO" || e == "ACTIVA") badge = "bg-success";
                        else if (e == "INACTIVO" || e == "CANCELADO" || e == "VENCIDO") badge = "bg-danger";
                    }
                    <span class="badge @badge">@est</span>
                </dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.Tarea.IdUsuario)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Tarea.IdUsuario)</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a asp-page="./Edit" asp-route-id="@Model.Tarea.Id" class="btn btn-primary shadow-sm">
            <i class="fas fa-edit me-1"></i>Editar
        </a>
        <a asp-page="./Index" class="btn btn-outline-secondary shadow-sm">
            <i class="fas fa-arrow-left me-1"></i>Volver
        </a>
    </div>
</div>

<style>
    dt {
        color: #2c3e50;
    }

    .card {
        border-radius: 0.75rem;
    }

    .btn {
        min-width: 120px;
    }
</style>
